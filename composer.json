{
  "name": "garlic-signage/garlic-hub",
  "description": "Digital Signage Content and Device Management for SMIL compatible Media Player",
  "type": "project",
  "license": "AGPL",
  "require": {
    "php": ">=8.4.0",
    "slim/slim": "4.*",
    "slim/psr7": "^1.7",
    "slim/http": "^1.4",
    "slim/flash": "^0.4.0",
    "php-di/php-di": "^7.0",
    "mustache/mustache": "^3.0",
    "vlucas/phpdotenv": "^5.6",
    "monolog/monolog": "^3.9",
    "league/flysystem": "^3.30",
    "league/oauth2-server": "^9.2",
    "league/flysystem-ziparchive": "^3.29",
    "phpfastcache/phpfastcache": "^9.2",
    "doctrine/dbal": "^4.2",
    "symfony/console": "^7.3",
    "guzzlehttp/guzzle": "^7.9",
    "defuse/php-encryption": "^2.4",
    "ramsey/uuid": "^4.9",
    "ext-fileinfo": "*",
    "ext-imagick": "*",
    "ext-intl": "*",
    "ext-openssl": "*",
    "ext-simplexml": "*",
    "ext-libxml": "*",
    "ext-curl": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "platform": {
      "php": "8.4"
    },
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-phpunit": "^2.0",
    "codebtech/coveragebadge": "^0.3.7",
    "php-mock/php-mock": "^2.6",
    "php-mock/php-mock-phpunit": "^2.13"
  }
}
