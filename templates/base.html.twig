<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Garlic-Hub{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="{{ asset('css/theme-base.css') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <header>
            {% include 'navbar.html.twig' %}
        </header>
        <main>
            {% block body %}{% endblock %}
        </main>

        <footer>
          {% if app.environment in ['dev', 'test'] %}
            <div id="compile_time">
                {{ execution_time() | number_format(7) }} sec
                {{ memory_usage() }}
               {{ peak_memory_usage() }} peak
            </div>
            {% endif %}

            <ul class="menu_company_legals">
                <li>
                    <a href="/legals">{{ 'footer.legal_notice' | trans({}, 'menu') }}</a>
                </li>
            </ul>
        </footer>

    </body>
</html>
