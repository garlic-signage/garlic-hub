<ul id="trigger">
	<li>
		<input type="hidden" name="trigger_item_id" id="edit_item_id" value="{{{TRIGGER_ITEM_ID}}}" />
		<button type="button"  title="{{{LANG_ADD_WALLCLOCK}}}" class="bi bi-plus-circle naked-button" id="addWallclock">
			{{{LANG_WALLCLOCK}}}
		</button>
	<li id="wallclocksContainer"></li>
	<li>
		<button type="button"  title="{{{LANG_ADD_ACCESSKEY}}}" class="bi bi-plus-circle naked-button"  id="addAccesskey">
			{{{LANG_ACCESSKEY}}}
		</button>
	</li>
	<li id="accesskeysContainer"></li>
	<li>
		<button type="button"  title="{{{LANG_ADD_TOUCH}}}" class="bi bi-plus-circle naked-button" id="addTouch">
			{{{LANG_TOUCH}}}
		</button>
	</li>
	<li id="touchesContainer"></li>
	<li>
		<button type="button" title="{{{LANG_ADD_NOTIFY}}}" class="bi bi-plus-circle naked-button" id="addNotify">
			{{{LANG_NOTIFY}}}
		</button>
	</li>
	<li id="notifiesContainer"></li>
</ul>
<template id="wallclockTemplate">
		<ul>
			<li>
				<p>
					<button type="button" title="{{{LANG_REMOVE_WALLCLOCK}}}" class="bi bi-trash remove naked-button"> {{{LANG_REMOVE_WALLCLOCK}}}</button>
				</p>
				<label>{{{LANG_WEEKDAY}}}
					<select class="edit-weekday">
						<option value="0">-</option>
						{{#wallclock_weekdays}}
							<option value="{{{WEEKDAY_NUMBER}}}">{{{LANG_WEEKDAY_NAME}}}</option>
						{{/wallclock_weekdays}}
					</select>
				</label>
				<label>
					<select class="edit-weekday-prefix">
						<option value="+">{{{LANG_WEEKDAY_AFTER}}}</option>
						<option value="-">{{{LANG_WEEKDAY_BEFORE}}}</option>
					</select>
				</label>
				<label>{{{LANG_DATETIME}}}
					<input type="datetime-local" class="edit-datetime" step="1">
				</label>
			</li>
			<li>
				<p>{{{LANG_REPEATS}}}</p>
				<label>
					<input type="radio" value="-1" class="no-repeats-select"> {{{LANG_NO_REPEATS}}}
				</label>
				<label>
					<input type="radio"  value="0" class="infinite-repeats-select"> {{{LANG_INFINITE_REPEATS}}}
				</label>
				<label>
					<input type="radio" value="1" class="number-repeats-select"> {{{LANG_NUMBER_REPEATS}}}
					<input type="number" class="number-repeats" min="1" max="9999">
				</label>
			</li>
			<li class="repeats-section">
				{{{LANG_EVERY}}}:
				<ul>
					<li>
						<label>
							<input type="number" class="repeat-minutes" min="0" max="59"><br> {{{LANG_REPEAT_MINUTES}}}
						</label>
					</li>
					<li>
						<label>
							<input type="number" class="repeat-hours" min="0" max="23"><br> {{{LANG_REPEAT_HOURS}}}
						</label>
					</li>
					<li>
						<label for="repeat_days">
							<input type="number" class="repeat-days" min="0" max="7"><br> {{{LANG_REPEAT_DAYS}}}
						</label>
					</li>
					<li>
						<label for="repeat_weeks">
							<input type="number" class="repeat-weeks" min="0" max="4"><br> {{{LANG_REPEAT_WEEKS}}}
						</label>
					</li>
					<li>
						<label for="repeat_months">
							<input type="number" class="repeat-months" min="0" max="11"><br> {{{LANG_REPEAT_MONTHS}}}
						</label>
					</li>
					<li>
						<label>
							<input type="number" class="repeat-years" min="0" max="11"><br> {{{LANG_REPEAT_YEARS}}}
						</label>
					</li>
				</ul>
			</li>
		</ul>
</template>

<template id="accesskeyTemplate">
	<ul>
		<li>
			<p>
				<button type="button" title="{{{LANG_REMOVE_ACCESSKEY}}}" class="bi bi-trash remove naked-button"> {{{LANG_REMOVE_ACCESSKEY}}}</button>
			</p>
			<label>
				 <input type="text" class="edit-accesskey" maxlength="1" pattern="[a-zA-Z0-9]*" title="{{{LANG_ONLY_ALPHANUMERIC}}}">
			</label>
		</li>
	</ul>
</template>
<template id="touchTemplate">
	<ul>
		<li>
			<p>
				<button type="button" title="{{{LANG_REMOVE_TOUCH}}}" class="bi bi-trash remove naked-button"> {{{LANG_REMOVE_TOUCH}}}</button>
			</p>
			<label>
				<select class="edit-touch-item">
					<option value="0">-</option>
				</select>
			</label>
		</li>
	</ul>
</template>
<template id="notifyTemplate">
	<ul>
		<li>
			<p>
				<button type="button" title="{{{LANG_REMOVE_NOTIFY}}}" class="bi bi-trash remove naked-button"> {{{LANG_REMOVE_NOTIFY}}}</button>
			</p>
			<label>
				<input type="text" class="edit-notify" pattern="[a-zA-Z0-9]*" title="{{{LANG_ONLY_ALPHANUMERIC}}}">
			</label>
		</li>
	</ul>
</template>