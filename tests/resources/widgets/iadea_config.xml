<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:ia="http://schemas.iawidget.org/widgetconfig-1.0">
	<name short="Rss">Rss</name>
	<id>{4679064D-0C36-4FCB-97EE-F9A00F8D77C2}</id>
	<version>1.0.0.0</version>
	<icon src="icon.png"/>
	<content src="index.html"/>

	<preference name="urls" ia:types="text" ia:mandatory="true" ia:tooltip="e.g. http://rss.cnn.com/rss/cnn_topstories.rss" />
	<preference name="count" value="255" ia:types="integer" readonly="true" />
	<preference name="WritingDirection" ia:types="radio" ia:default="ltr">
		<ia:options value="ltr" resourceKey="ltr" />
		<ia:options value="rtl" resourceKey="rtl" />
	</preference>
	<preference name="showSweepHand" ia:types="checkbox" ia:default="true"/>
	<preference name="BackgroundColor" ia:types="color" ia:default="#008080" ia:previewbg="true"/>
	<preference name="BackgroundOpacity" ia:types="colorOpacity" value="100" />
	<preference name="Color" ia:types="color" ia:default="#ffffff" />
	<preference name="Title-Length" value="" ia:types="integer">
		<ia:note>Control the length of the RSS title.</ia:note>
		<ia:note xml:lang="de">Steuert die LÃ¤nge des RSS-Titels.</ia:note>
	</preference>
	<preference name="Content-Length" value="" ia:types="integer">
		<ia:note>Control the length of the RSS content. 0 or non-integer words will display the full length of the content.</ia:note>
	</preference>
	<preference name="margin" value="0" readonly="true"/>
	<preference name="noTransform" value="true" readonly="true"/>
	<preference name="cities" ia:types="combo" ia:mandatory="true" ia:default="New York">
		<ia:options>Athens</ia:options>
		<ia:options>Hamburg</ia:options>
		<ia:options>London</ia:options>
		<ia:options>New York</ia:options>
		<ia:options>Beijing</ia:options>
		<ia:options>Paris</ia:options>
		<ia:options>Sao Paulo</ia:options>
		<ia:options>Taipei</ia:options>
		<ia:options>Tokyo</ia:options>
	</preference>
	<preference name="align" ia:types="list" ia:default="right">
		<ia:options value="right" resourceKey="right" />
		<ia:options value="center" resourceKey="center" />
		<ia:options value="left" resourceKey="left" />
	</preference>

</widget>
